{
  "presets": [
    "react",
    "es2015",
    "stage-0"
  ],
  "env":{
    "production":{
      "plugins": [
        "transform-class-properties",
        "transform-decorators-legacy"
      ]
    },
    "development":{
      "plugins": [
        "transform-class-properties",
        "transform-decorators-legacy",
        [
          "react-transform",
          {
            "transforms": [
              {
                "transform": "react-transform-hmr",
                "imports": [
                  "react"
                ],
                "locals": [
                  "module"
                ]
              },
              {
                "transform": "react-transform-catch-errors",
                "imports": [
                  "react",
                  "redbox-react"
                ]
              }
            ]
          }
        ]
      ]
    },
    "test": {
      "plugins": [
        "transform-class-properties",
        "transform-decorators-legacy"
      ]
    }
  }
}